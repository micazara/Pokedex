{{#sesionOk}}
<div>
<h1 class="w3-center w3-padding-16 ">{{sesionOk}}</h1>
</div>
{{/sesionOk}}

<div class="opciones">
    <form action="/home/buscar" method="get">

        <label for="campoABuscar">Ingresá id, nombre o tipo de un pokemon: </label>
        <input type="text" name="campoABuscar" id="campoABuscar">

        <label for="busqueda"></label>
        <input type="submit" name="busqueda" value="Buscar">
    </form>
    <a href="/iniciarSesion/cerrarSesion" class="w3-button w3-white w3-border w3-border-red w3-small">Cerrar sesión</a>

</div>
<div class="contenedor_pokemon" style="padding: 50px">
    {{#pokemon}}
    <div class="">
        <div class="caja_individual">
            <p class="campo_del_pokemon">ID: </p>
            {{id}}
        </div>

        <div class="caja_individual">
            <p class="campo_del_pokemon">Nombre: </p>
            {{nombre}}
        </div>

        <div class="caja_individual">
            <p class="campo_del_pokemon">Tipo </p>
            <img src='{{tipo}}'>
        </div>


        <div class="caja_individual">
            <img src='{{imagen}}' style="width: 150; height: 150px;">
        </div>
    </div>

    {{/pokemon}}

</div>